<local:AgentCellBase x:Class="PhaethonsNomikon.AgentHeadCell"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:PhaethonsNomikon"
                     mc:Ignorable="d"
                     d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- Log Controls -->
            <RowDefinition Height="20"/> <!-- Log View -->
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Stretch="Uniform"
               Source="{Binding Agent.IconUrl, RelativeSource={RelativeSource AncestorType=local:AgentCellBase}}" />
        <TextBlock Grid.Row="1" 
                   HorizontalAlignment="Center"
                   Text="{Binding Agent.FullName, RelativeSource={RelativeSource AncestorType=local:AgentCellBase}}" />
    </Grid>
</local:AgentCellBase>
