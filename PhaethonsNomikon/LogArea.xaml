<UserControl x:Class="PhaethonsNomikon.LogArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PhaethonsNomikon"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>
        <TextBox x:Name="LogView" FontFamily="Consolas" FontSize="12" Background="Orange"
                 IsReadOnly="True" TextWrapping="Wrap" Text="Logs will appear here..."/>
    </ScrollViewer>
</UserControl>
